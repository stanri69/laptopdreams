= form_for @videocard do |f|
  - if @videocard.errors.any?
    #error_explanation
      %h2= "#{pluralize(@videocard.errors.count, "error")} prohibited this videocard from being saved:"
      %ul
        - @videocard.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :type_videocard
    = f.text_field :type_videocard
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :amount_memory
    = f.number_field :amount_memory
  .actions
    = f.submit 'Save'
