= form_for @laptop do |f|
  - if @laptop.errors.any?
    #error_explanation
      %h2= "#{pluralize(@laptop.errors.count, "error")} prohibited this laptop from being saved:"
      %ul
        - @laptop.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
